{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    // eslint内置规则集
    "eslint:recommended",
    // 校验import和export语法的插件的推荐规则集，支持检查导入路径，且可以对import进行排序
    "plugin:import/recommended",
    // 校验 React 代码规范的一个推荐规则集。该插件支持检查 React 组件的使用方式是否符合规范，并可以检查 React JSX 语法的正确性。
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "react",
    "react-hooks",
    "prettier",
    "jsx-a11y",
    "@typescript-eslint",
    "simple-import-sort",
    "jest"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "settings": {
    "react": {
      "version": "detect"
    },
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"] // use typescript-eslint parser for .ts|tsx files.
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true // always try to resolve types under `<root>@types` directory even it doesn't contain any source code, like `@types/unist`.
      }
    }
  },

  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx", "*.json"],
      "rules": {
        "prettier/prettier": "error"
      }
    }
  ],

  "rules": {
    // 箭头函数括号前后总是有括号
    "arrow-parens": ["error", "always"],

    // 尾部逗号，仅在多行时需要添加
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "never",
        "functions": "never"
      }
    ],

    "@typescript-eslint/no-unused-vars": "off",

    // jsx后方不添加逗号
    "react/jsx-closing-bracket-location": [1, "line-aligned"],

    // 额外的分号报错
    "no-extra-semi": "error",

    // 2个空格缩进
    "indent": ["error", 2],

    // 换行符风格
    "linebreak-style": ["error", "unix"],

    // 使用双引号
    "quotes": ["error", "double"],

    // 总是加分号
    "semi": ["error", "always"],

    // 逗号的位置
    "comma-style": "warn",

    // 确保import在其他语句之前
    "import/first": "warn",

    // 确保每个import语句后都有一个空行
    "import/newline-after-import": "warn",

    // 禁止多次import同一个模块
    "import/no-duplicates": "error",

    // 针对css和svg等无法识别的import，这边关闭了校验
    "import/no-unresolved": "error",

    // 禁止使用默认导出的模块成员名称
    "import/no-named-as-default-member": "off",

    // import排序
    "simple-import-sort/imports": [
      "warn",
      {
        "groups": [
          // Packages. `react` related packages come first.
          ["^react", "^@?\\w"],
          // Internal packages.
          ["^(constants|utils)(/.*|$)", "^@[^/]+"],
          // Parent imports. Put `..` last.
          ["^@/", "^\\.\\.(?!/?$)", "^\\.\\./?$"],
          // Other relative imports. Put same-folder imports and `.` last.
          ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
          // Style imports.
          ["^.+\\.s?css$"],
          // svg imports
          ["^.+\\.svg$"]
        ]
      }
    ],
    "simple-import-sort/exports": "warn",

    // 避免使用未声明的React变量
    "react/react-in-jsx-scope": "off",

    // 按照一定规则排序props
    "react/jsx-sort-props": [
      "warn",
      {
        "callbacksLast": true,
        "shorthandFirst": true,
        "ignoreCase": true,
        "reservedFirst": true,
        "noSortAlphabetically": true
      }
    ]
  }
}
